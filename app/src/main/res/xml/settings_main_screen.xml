<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Primary preferences -->
    <PreferenceCategory android:title="Settings">

        <!-- App Theme -->
        <ListPreference
            android:key="Theme"
            android:summary="App Theme"
            android:title="Theme" />

        <!-- Show NSFW -->
        <SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="NSFW"
            android:summaryOff="NSFW content is hidden"
            android:summaryOn="NSFW content is visible"
            android:title="Show NSFW" />

        <!-- Startup Section-->
        <ListPreference
            android:key="StartupSection"
            android:summary="Tab to open when the app opens"
            android:title="Startup Section" />

        <!-- logout -->
        <Preference
            android:key="logout_btn"
            android:summary="Logout from MAL"
            android:title="Logout" />
    </PreferenceCategory>

    <!-- App information-->
    <PreferenceCategory android:title="Info">
        <!-- App Version -->
        <Preference
            android:key="app_version"
            android:title="App Version" />
    </PreferenceCategory>

    <!-- database functions -->
    <PreferenceCategory android:title="DATABASE">
        <!-- export database -->
        <Preference
            android:key="export_database"
            android:title="Export Database" />

        <!-- cleanup database -->
        <Preference
            android:key="cleanup_database"
            android:title="Clean Up Database" />

        <!-- delete database -->
        <Preference
            android:key="delete_database"
            android:title="Delete Database" />

    </PreferenceCategory>

    <!-- Preference debug, dynamically populated -->
    <PreferenceCategory
        android:key="dbg_prefs_category"
        android:title="PREFS" />

    <!-- content adapters debug, dynamically populated -->
    <PreferenceCategory
        android:key="dbg_ca_category"
        android:title="CONTENT_ADAPTERS" />
</PreferenceScreen>